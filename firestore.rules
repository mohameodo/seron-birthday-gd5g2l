rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read birthday data to see the public wall and countdowns.
    // Only authenticated users (via anonymous auth) can create new birthdays.
    // No one can update or delete birthdays directly from the client.
    match /birthdays/{birthdayId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}